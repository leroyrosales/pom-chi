{
  "name": "pom-chi",
  "version": "1.1.0",
  "description": "An HTML starter using TailwindCSS.",
  "main": "main.js",
  "scripts": {
    "build": "TAILWIND_MODE=build NODE_ENV=production npx tailwindcss -i ./assets/css/style.css -o ./style.css --minify",
    "watch": "npx tailwindcss -i ./assets/css/style.css -o ./style.css --watch",
    "serve": "cross-env NODE_ENV=development concurrently \"npx tailwindcss -i ./assets/css/style.css -o ./style.css --watch --jit --purge ./*.html\"  \"live-server . --no-css-inject\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leroyrosales/pom-chi.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leroyrosales/pom-chi/issues"
  },
  "homepage": "https://github.com/leroyrosales/pom-chi#readme",
  "dependencies": {
    "autoprefixer": "^10.2.5",
    "cssnano": "^5.0.2",
    "tailwindcss": "^2.2.2",
    "watch": "^1.0.2"
  },
  "devDependencies": {
    "concurrently": "^6.0.1",
    "cross-env": "^7.0.2",
    "live-server": "^1.2.1"
  }
}
